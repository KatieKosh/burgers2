




<div class="container">

  <div class="row">
    <div class="col-sm-2">
      <h2>Burger Line-Up</h2>
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.id}}. {{this.burger_name}}

              <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button class="waves-effect waves-light btn" type="submit">Devour it!</button>
              </form>

            </li>
          {{/unless}}
        {{/each}}
      </ul>
      <div id="burger-area"></div>

    </div>




    <div class="col-sm-8" id="cntr">
    			<h1>Add a Burger</h1>
    			<form class="create-update-form" action="burgers/create" method="POST">
    				<div class="form-group">
    					<label for="burgers">Burger Name:</label>
    					<input type="text" id="burgers" name="burger_name">
    				</div>
    				<button class="btn btn-info" type="submit">Add Burger</button>
    			</form>
    		</div>










